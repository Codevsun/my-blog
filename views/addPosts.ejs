<style>
  body {
    background-color: #f8f9fa;
  }

  .container {
    max-width: 500px;
    margin: 0 auto;
    background-color: #f8f9fa; /* Set background color with transparency */
    border-radius: 10px;
  }

  .text-center {
    text-align: center;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #a09b9b;
    background-color: #f8f9fa;
    border-radius: 5px;
    box-sizing: border-box;
  }

  .btn-secondary {
    display: block;
    margin-left: 200px;
    margin-top: 30px;
    padding: 10px;
    border: none;
    border-radius: 5px;
    background-color: #817676;
    border-color: #f3f3f3;
    color: #fff;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .btn-secondary:hover {
    background-color: #2d2d2e;
  }
</style>
<body class="hero-body">
  <div class="container">
    <h1 class="text-center" style="margin-top: 50px">Add a new post !</h1>
    <hr class="featurette-divider" style="margin-bottom: 30px" />
    <form action="/posts" method="post">
      <div class="form-group">
        <label for="title">Title</label>
        <input
          type="text"
          class="form-control"
          id="title"
          placeholder="select a title ..."
          required
        />
      </div>
      <div class="form-group">
        <label for="body">Body</label>
        <textarea
          class="form-control"
          id="body"
          rows="4"
          placeholder="express your thoughts ..."
          required
        ></textarea>
      </div>
      <div class="form-group">
        <label for="imageUrl">Image URL</label>
        <input
          type="text"
          class="form-control"
          id="imageUrl"
          placeholder="share an image ..."
          required
        />
      </div>
      <div class="form-group">
        <label for="category">Category</label>
        <select class="form-control" id="category" required>
          <option value="" selected disabled>Select a category</option>
          <option value="technology">Technology</option>
          <option value="health">Health</option>
          <option value="travel">Travel</option>
          <option value="food">Food</option>
          <option value="fashion">Fashion</option>
          <option value="lifestyle">Lifestyle</option>
          <option value="sports">Sports</option>
          <option value="finance">Finance</option>
          <!-- Add more options as needed -->
        </select>
      </div>

      <button
        type="submit"
        class="btn btn-secondary"
        style="margin-bottom: 180px"
      >
        Submit
      </button>
    </form>
  </div>
</body>
